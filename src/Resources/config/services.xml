<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ce\SuggestedRetailPrice\Core\Content\SuggestedRetailPrice\SuggestedRetailPriceDefinition">
            <tag name="shopware.entity.definition" entity="ce_suggested_retail_price" />
        </service>

        <service id="Ce\SuggestedRetailPrice\Storefront\Page\Product\Subscriber\ProductPageSubscriber">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Price\ProductPriceDefinitionBuilderInterface"/>
            <argument type="service" id="customer_group.repository"/>
            <argument type="service" id="ce_suggested_retail_price.repository"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>