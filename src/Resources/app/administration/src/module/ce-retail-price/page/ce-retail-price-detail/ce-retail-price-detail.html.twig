{% block ce_retail_price_detail %}
    <sw-page class="ce-retail-price-detail">
        <template slot="smart-bar-actions">
            <sw-button :routerLink="{ name: 'ce.retail.price.list' }">
                {{ $t('ce-retail-price.detail.cancelButtonText') }}
            </sw-button>

            <sw-button-process
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                variant="primary"
                @process-finish="saveFinish"
                @click="onClickSave">
                {{ $t('ce-retail-price.detail.saveButtonText') }}
            </sw-button-process>
        </template>

        <template slot="content">
            <sw-card-view>
                <sw-card v-if="entity" :isLoading="isLoading">
                    <sw-entity-single-select
                        required
                        :label="$t('ce-retail-price.detail.targetCustomerGroupLabel')"
                        v-model="entity.targetCustomerGroupId"
                        entity="customer_group">
                    </sw-entity-single-select>
                    <sw-entity-single-select
                        required
                        :label="$t('ce-retail-price.detail.sourceCustomerGroupLabel')"
                        v-model="entity.sourceCustomerGroupId"
                        entity="customer_group">
                    </sw-entity-single-select>
                    <sw-switch-field
                        :label="$t('ce-retail-price.detail.displayGrossLabel')"
                        v-model="entity.displayGross">
                    </sw-switch-field>
                    <sw-switch-field
                        :label="$t('ce-retail-price.detail.displaySavedPercentageLabel')"
                        v-model="entity.showSavedPercentage">
                    </sw-switch-field>
                    <sw-switch-field
                        :label="$t('ce-retail-price.detail.considerPseudopriceLabel')"
                        v-model="entity.considerPseudoprice">
                    </sw-switch-field>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
